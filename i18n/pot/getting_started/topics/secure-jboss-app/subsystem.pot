"    <realm>demo</realm>\n"
"    <auth-server-url>http://localhost:8180/auth</auth-server-url>\n"
"    <public-client>true</public-client>\n"
"    <ssl-required>EXTERNAL</ssl-required>\n"
"    <resource>vanilla</resource>\n"
"  </secure-deployment>\n"
"</subsystem>\n"
