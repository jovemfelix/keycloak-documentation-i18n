#. type: Plain text
#: source/authorization_services/topics/service/client-api.adoc:97
msgid ""
"EntitlementRequest request = new EntitlementRequest(); PermissionRequest "
"permission = new PermissionRequest();"
msgstr ""

#. type: Plain text
#: source/authorization_services/topics/service/client-api.adoc:99
msgid "permission.setResourceSetName(\"Hello World Resource\");"
msgstr ""

#. type: Plain text
#: source/authorization_services/topics/service/client-api.adoc:101
msgid "request.addPermission(permission);"
msgstr ""

#.  send the entitlement request to the server to obtain an RPT
#.  with all permissions granted to the user
#. type: Plain text
#: source/authorization_services/topics/service/client-api.adoc:106
msgid ""
"EntitlementResponse response = authzClient.entitlement(eat).get(\"hello-"
"world-authz-service\", request); String rpt = response.getRpt();"
msgstr ""

