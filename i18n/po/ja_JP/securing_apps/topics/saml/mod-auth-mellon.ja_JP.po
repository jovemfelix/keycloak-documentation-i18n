"fqdn=`hostname`\n"
"mellon_endpoint_url=\"https://${fqdn}/mellon\"\n"
"mellon_entity_id=\"${mellon_endpoint_url}/metadata\"\n"
"file_prefix=\"$(echo \"$mellon_entity_id\" | sed 's/[^A-Za-z.]/_/g' | sed 's/__*/_/g')\"\n"
msgstr ""
"fqdn=`hostname`\n"
"mellon_endpoint_url=\"https://${fqdn}/mellon\"\n"
"mellon_entity_id=\"${mellon_endpoint_url}/metadata\"\n"
"file_prefix=\"$(echo \"$mellon_entity_id\" | sed 's/[^A-Za-z.]/_/g' | sed 's/__*/_/g')\"\n"

#. type: Plain text
